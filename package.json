{
  "name": "komondor-plugin",
  "description": "komondor plugin system",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist-es5",
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5",
    "build-es5": "tsc -p tsconfig.es5.json",
    "clean": "rimraf dist-es5",
    "codecov": "codecov",
    "coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "tsc --noEmit && jest",
    "verify": "tsc --noEmit && npm run lint && npm run coverage && npm run dependency-check",
    "watch": "node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/komondor-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/unional/komondor-plugin/issues"
  },
  "homepage": "https://github.com/unional/komondor-plugin",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": ".*\\.(test|spec).(js|ts)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.7",
    "dependency-check": "^3.1.0",
    "jest": "^22.4.2",
    "power-assert": "^1.4.4",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.1.2",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-unional": "^0.9.2",
    "typescript": "^2.8.0-rc"
  }
}
